# Environment variables declared in this file are automatically made available to Prisma.
# Copy this file to .env and update the values with your actual configuration

# =================================
# REQUIRED CONFIGURATION
# =================================

# Database Configuration
# PostgreSQL connection string - REQUIRED
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# JWT Configuration - REQUIRED
# SECURITY WARNING: Change JWT_SECRET in production! Use a long, random string (32+ characters)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-must-be-32-chars-plus"

# =================================
# SERVER CONFIGURATION
# =================================

# Application Environment
NODE_ENV=development
# Server Port
PORT=3000

# =================================
# JWT TOKEN EXPIRATION (Optional)
# =================================

# Access token expiration in minutes (default: 30)
JWT_ACCESS_EXPIRATION_MINUTES=30
# Refresh token expiration in days (default: 30)
JWT_REFRESH_EXPIRATION_DAYS=30
# Reset password token expiration in minutes (default: 10)
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
# Email verification token expiration in minutes (default: 10)
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10

# =================================
# EMAIL CONFIGURATION (Optional)
# =================================
# Required only if you want password reset/email verification functionality
# Leave blank to disable email features

# SMTP Server Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com

# Common SMTP Configurations:
# Gmail: SMTP_HOST=smtp.gmail.com, SMTP_PORT=587
# Outlook: SMTP_HOST=smtp-mail.outlook.com, SMTP_PORT=587
# SendGrid: SMTP_HOST=smtp.sendgrid.net, SMTP_PORT=587

# =================================
# TEST CONFIGURATION (Optional)
# =================================
# Only needed if running tests - uses separate test database

# Test database URL - should be different from main DATABASE_URL
# TEST_DATABASE_URL="postgresql://username:password@localhost:5432/test_database_name?schema=public"